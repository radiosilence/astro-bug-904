{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "noEmit": false,
    "incremental": false,
    "noUnusedLocals": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "target": "ES2020",
    "rootDir": "./src",
    "jsx": "react"
  },
  "exclude": ["node_modules"]
}
